# Google Gemini API Configuration
GOOGLE_API_KEY=your-api-key-here
GEMINI_MODEL_ID=gemini-2.5-flash-image

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Logging
LOG_LEVEL=INFO

# Image Configuration
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp

# Modal GPU Configuration
USE_MODAL_GPU=true
MODAL_APP_NAME=canvas-sync-gpu-worker
MODAL_FUNCTION_NAME=generate_image_edit
MODAL_CALL_TIMEOUT=120

